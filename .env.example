# Environment Configuration
NODE_ENV=development
PORT=3050
API_BASE_URL=http://localhost:3050

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# LLM API Keys (at least one required)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here
GOOGLE_AI_API_KEY=your-google-ai-key-here
MISTRAL_API_KEY=your-mistral-key-here

# Bible API Integration
BIBLE_API_KEY=your-bible-api-key-here

# Vector Database (Pinecone)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=thinkdrop-index

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=yourpassword

# Development/Testing
SHOULD_RUN_SIMULATED_RESPONSES=false

# Analytics
ANALYTICS_ENABLED=true

# Cache TTL Settings (in seconds)
CACHE_TTL_DEFAULT=300
CACHE_TTL_BIBLE_VERSES=86400
CACHE_TTL_AI_RESPONSES=1800

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# Logging
LOG_LEVEL=debug

# n8n Webhook URLs
N8N_WEBHOOK_SUMMARIZER=https://your-n8n-instance.com/webhook/summarizer
N8N_WEBHOOK_CLIPBOARD=https://your-n8n-instance.com/webhook/clipboard
N8N_WEBHOOK_DOC_GENERATION=https://your-n8n-instance.com/webhook/doc-generation
N8N_WEBHOOK_ACTION=https://your-n8n-instance.com/webhook/action
N8N_WEBHOOK_TTS=https://your-n8n-instance.com/webhook/tts

# Speech-to-Text Service (whisper/deepgram)
STT_SERVICE=whisper
DEEPGRAM_API_KEY=your-deepgram-key-here

# Screen Capture Settings
SCREENSHOT_INTERVAL=5000
OCR_CONFIDENCE_THRESHOLD=0.7

# Overlay Settings
OVERLAY_OPACITY=0.9
OVERLAY_POSITION=top-right
AUTO_HIDE_DELAY=3000

# ========================================
# MCP (Microservices Context Protocol)
# ========================================

# MCP Feature Flags
MCP_ENABLED=false
MCP_ROUTE_MEMORY=false
MCP_ROUTE_WEB_SEARCH=false
MCP_ROUTE_PHI4=false

# MCP API Keys (auto-generated on first run if not set)
MCP_USER_MEMORY_API_KEY=
MCP_WEB_SEARCH_API_KEY=
MCP_PHI4_API_KEY=
MCP_COREFERENCE_API_KEY=

# MCP Service Endpoints
MCP_USER_MEMORY_ENDPOINT=http://localhost:3001
MCP_WEB_SEARCH_ENDPOINT=http://localhost:3002
MCP_PHI4_ENDPOINT=http://localhost:3003
MCP_COREFERENCE_ENDPOINT=http://localhost:3005

# MCP Service Timeouts (milliseconds)
MCP_USER_MEMORY_TIMEOUT=5000
MCP_WEB_SEARCH_TIMEOUT=3000
MCP_PHI4_TIMEOUT=10000
MCP_COREFERENCE_TIMEOUT=5000
MCP_COMMAND_TIMEOUT=300000

# MCP Service Retries
MCP_USER_MEMORY_RETRIES=3
MCP_WEB_SEARCH_RETRIES=3
MCP_PHI4_RETRIES=2

# MCP Circuit Breaker Settings
MCP_CB_FAILURE_THRESHOLD=5
MCP_CB_SUCCESS_THRESHOLD=3
MCP_CB_TIMEOUT=30000
MCP_CB_HALF_OPEN_REQUESTS=1

# MCP Health Check Settings
MCP_HEALTH_CHECK_INTERVAL=30000
MCP_HEALTH_CHECK_TIMEOUT=5000
MCP_HEALTH_CACHE_TTL=15000

# MCP Retry Settings
MCP_RETRY_MAX=3
MCP_RETRY_INITIAL_DELAY=100
MCP_RETRY_MAX_DELAY=5000
MCP_RETRY_BACKOFF_MULTIPLIER=2

# MCP Cache Settings
MCP_CACHE_MAX_SIZE=1000
MCP_CACHE_TTL=300000

# MCP Metrics Settings
MCP_METRICS_LOG_LEVEL=info
MCP_METRICS_LOG_FORMAT=json
MCP_METRICS_COLLECT_INTERVAL=60000

# MCP Security Settings
MCP_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
MCP_MAX_PAYLOAD_SIZE=10485760
MCP_RATE_LIMIT_PER_MINUTE=100

# MCP Database Settings
MCP_DATABASE_PATH=./data/agent_memory.duckdb
MCP_DATABASE_POOL_SIZE=5
